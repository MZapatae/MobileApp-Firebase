<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.mzapatae.mobileFirebase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="cl.mzapatae.mobileFirebase.base.ApplicationBase"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="cl.mzapatae.mobileFirebase.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="cl.mzapatae.mobileFirebase.activities.LandingActivity" />
        <activity android:name="cl.mzapatae.mobileFirebase.activities.MainActivity"></activity>
    </application>

</manifest>